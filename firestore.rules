rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Permitir leer/escribir a usuarios autenticados
    match /movements/{document=**} {
      allow read, write: if request.auth != null;
    }
    
    match /users/{userId}/{document=**} {
      allow read, write: if request.auth != null;
    }
    
    // Permitir acceso a datos públicos como metas
    match /goals/{document=**} {
      allow read, write: if request.auth != null;
    }
    
    // Regla de seguridad para permitir lecturas sin autenticación en modo offline
    match /{document=**} {
      allow read: if request.auth != null || (resource == null);
    }
  }
} 